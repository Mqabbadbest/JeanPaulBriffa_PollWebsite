@{
    ViewData["Title"] = "Home Page";
}

@{
    ViewData["Title"] = "Welcome";
}

<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 bg-light p-5" style="border-radius:15px;">
                <h1 class="display-4 fw-bold mb-3 text-dark">Welcome to <span style="color: #28a745">Pollster</span></h1>
                <p class="lead text-muted mb-4">
                    Create and participate in live polls easily. Share your opinion and see what others think.
                </p>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a class="btn btn-dark btn-lg custom-input" href="/Poll">Browse Polls</a>
                    <a class="btn btn-outline-dark btn-lg custom-input" href="/Poll/Create">Create a Poll</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .custom-input {
            transition: all 0.2s ease-in-out;
            outline: none;
        }

            .custom-input:hover {
                background-color: #1a1a1a;
                color: #ffffff;
                transform: scale(1.03);
            }

            .custom-input:focus-visible,
            .custom-input:focus,
            .custom-input:active {
                box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.5);
                transform: scale(0.97);
                border-color: #28a745;
                background-color: #111;
                color: #fff;
            }
    </style>



    @if (TempData["StatusMessageConfirmEmail"] != null)
    {
        var status = TempData["StatusMessageConfirmEmail"]!.ToString();
        var icon = status.Contains("Error") ? "warning" : "success";
        var text = icon == "success" ? "Do not forget to Login!" : "";
        <script>
            Swal.fire({
                icon: '@icon',
                title: '@status',
                text: '@text',
                showConfirmButton: false,
                timer: 2500
            });
        </script>
    }
}